            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"map_id\": \"{{map_id}}\",\n  \"type\": \"city\",\n  \"name\": \"Test Location\",\n  \"description\": \"Location description\",\n  \"x\": 100.0,\n  \"y\": 200.0,\n  \"metadata_json\": {}\n}"
            }
          }
        },
        {
