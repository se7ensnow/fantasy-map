              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["locations"],
              "query": [
                { "key": "map_id", "value": "{{map_id}}" }
              ]
            }
          }
        },
        {
          "name": "Get Location by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "http://localhost:8000/locations/{{location_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["locations", "{{location_id}}"]
            }
          }
        },
        {
          "name": "Update Location",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "http://localhost:8000/locations/{{location_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["locations", "{{location_id}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"city\",\n  \"name\": \"Updated Location\",\n  \"description\": \"Updated description\",\n  \"x\": 150.0,\n  \"y\": 250.0,\n  \"metadata_json\": {}\n}"
            }
          }
        },
        {
          "name": "Delete Location",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "http://localhost:8000/locations/{{location_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["locations", "{{location_id}}"]
            }
          }
        }
      ]
    }
  ]
}
